{
  "name": "node-express-ts-backend",
  "version": "1.0.0",
  "private": true,
  "description": "Backend service using Node.js, Express, and TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -p tsconfig.json -w",
    "start": "node dist/index.js",
    "start:dev": "nodemon --watch src --exec ts-node src/index.ts",
    "lint": "eslint src --ext .ts",
    "test": "echo \"No tests specified\" && exit 0",
    "clean": "rimraf dist"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "express": "^4.19.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.7.4",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}
